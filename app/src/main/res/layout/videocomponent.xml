<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/videoLayout"
    android:background="@color/light_grey"
    android:layout_margin="5dp"
    >

    <ImageView
        android:id="@+id/componentMusic_imageIv"
        android:layout_width="115dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img"/>


        android:layout_marginStart="5dp"
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toEndOf="@+id/componentMusic_imageIv"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/componentMusic_listensTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="203.102"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/componentMusic_songTv"
            app:layout_constraintLeft_toRightOf="@+id/componentMusic_imageIv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />


    <ImageButton
        android:id="@+id/music_clear_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/play_arrow"
        android:background="#55FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/componentMusic_songTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/componentMusic_imageIv"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="125dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>